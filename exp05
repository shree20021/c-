private void btn_insert_Click(object sender, EventArgs e)
{

string query = &quot;insert into StudentData values(&quot; + txt_stdid.Text + &quot;,&#39;&quot; + txt_stdname.Text + &quot;&#39;,&#39;&quot; +
txt_address.Text + &quot;&#39;,&#39;&quot; + txt_class.Text + &quot;&#39;)&quot;; conn.Open(); cmd = new
